<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <key>org.exoplatform.addon.kudos.service.KudosStorage</key>
    <type>org.exoplatform.addon.kudos.service.TransientKudosStorage</type>
  </component>

  <component>
    <type>org.exoplatform.addon.kudos.service.KudosService</type>
    <init-params>
      <value-param>
        <name>defaultAccessPermission</name>
        <description>Default access permissions for Kudos Feature</description>
        <value>${exo.addon.kudos.defaultAccessPermission:}</value>
      </value-param>
      <value-param>
        <name>defaultKudosPerMonth</name>
        <description>Default number of kudos per user per month</description>
        <value>${exo.addon.kudos.defaultKudosPerMonth:3}</value>
      </value-param>
    </init-params>
  </component>

  <component>
    <type>org.exoplatform.addon.kudos.rest.KudosAccountREST</type>
  </component>

  <component>
    <type>org.exoplatform.addon.kudos.rest.KudosREST</type>
  </component>

