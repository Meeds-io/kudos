<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

    <!-- Gamification zones : reward  zone -->
  <external-component-plugins>
    <target-component>org.exoplatform.addons.gamification.service.setting.zone.ZoneRegistry</target-component>
    <component-plugin>
      <name>social.zone</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.zone.model.ZoneConfig</type>
      <init-params>
        <value-param>
          <name>zone-name</name>
          <value>reward</value>
        </value-param>
        <value-param>
          <name>zone-description</name>
          <value>reward</value>
        </value-param>
        <value-param>
          <name>zone-priority</name>
          <value>1</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.addons.gamification.service.setting.rule.RuleRegistry</target-component>
    <component-plugin>
      <name>rule.SendKudos</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.rule.model.RuleConfig</type>
      <init-params>
        <value-param>
          <name>rule-title</name>
          <value>sendKudos</value>
        </value-param>
        <value-param>
          <name>rule-description</name>
          <value>You sent a Kudos</value>
        </value-param>
        <value-param>
          <name>rule-score</name>
          <value>10</value>
        </value-param>
        <value-param>
          <name>rule-zone</name>
          <value>reward</value>
        </value-param>
        <value-param>
          <name>rule-enable</name>
          <value>true</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
  <external-component-plugins>
    <target-component>org.exoplatform.addons.gamification.service.setting.rule.RuleRegistry</target-component>
    <component-plugin>
      <name>rule.ReceiveKudos</name>
      <set-method>addPlugin</set-method>
      <type>org.exoplatform.addons.gamification.service.setting.rule.model.RuleConfig</type>
      <init-params>
        <value-param>
          <name>rule-title</name>
          <value>receiveKudos</value>
        </value-param>
        <value-param>
          <name>rule-description</name>
          <value>You received a Kudos</value>
        </value-param>
        <value-param>
          <name>rule-score</name>
          <value>5</value>
        </value-param>
        <value-param>
          <name>rule-zone</name>
          <value>reward</value>
        </value-param>
        <value-param>
          <name>rule-enable</name>
          <value>true</value>
        </value-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>
  <external-component-plugins>
    <target-component>org.exoplatform.groovyscript.text.TemplateService</target-component>
    <component-plugin>
      <name>UIActivityActionBar-actions-after</name>
      <set-method>addTemplateExtension</set-method>
      <type>org.exoplatform.groovyscript.text.TemplateExtensionPlugin</type>
      <init-params>
        <values-param>
          <name>templates</name>
          <description>The kudos template to include in all activity actionBar template</description>
          <value>war:/groovy/social-extension/activity/commons/UIActivityActionBarKudos.gtmpl</value>
        </values-param>
      </init-params>
    </component-plugin>
    <component-plugin>
      <name>UIActivityActionBar-actions-mobile-after</name>
      <set-method>addTemplateExtension</set-method>
      <type>org.exoplatform.groovyscript.text.TemplateExtensionPlugin</type>
      <init-params>
        <values-param>
          <name>templates</name>
          <description>The actionBar kudos mobile activity template to include in all activity templates</description>
          <value>war:/groovy/social-extension/activity/commons/UIActivityActionBarMobileKudos.gtmpl</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>